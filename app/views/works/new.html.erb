<%= render "layouts/error", obj: @work %>

<h2>募集内容登録</h2>

<%= form_with model: [@company, @work] ,data: {remote: false} do |f| %>
	<h3>タイトル</h3>
	<p>（検索結果トップに表示されます）</p>
	<div><%= f.text_area :title %></div>
		 <div class="field">

	<h3>紹介文</h3>
	<p>（検索結果トップに表示されます）</p>
		<div><%= f.text_area :introduction %></div>
		 <div class="field">
  	<%= f.label "画像" %><br />
  	<%= f.attachment_field :image %>
  </div>

	<h3>募集要項 詳細</h3>
		<div><%= f.text_area :job_details %></div>

	<div><%= f.submit "登録する", class:"btn btn-warning" %></div>
<% end %>