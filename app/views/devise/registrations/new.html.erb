<h2>マイページ登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    <span>必須</span>
  </div>

  <div class="field">
    <%= f.label :name_kana %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
    <span>必須</span>
  </div>

  <div class="field">
    <%= f.label :nic_name %><br />
    <%= f.text_field :nic_name, autofocus: true, autocomplete: "nic_name" %>
    <span>必須</span>
  </div>

  <label>
    <%= f.radio_button :sex, "男" %> 男 
  </label>
  <label>
    <%= f.radio_button :sex, "女" %> 女
  </label>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.text_field :birthday, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code" %>
  </div>

  <div class="field">
    <%= f.label :address_prefecture_name %><br />
    <%= f.text_field :address_prefecture_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address_city %><br />
    <%= f.text_field :address_city, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address_line1 %><br />
    <%= f.text_field :address_line1, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address_line2 %><br />
    <%= f.text_field :address_line2, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  画像


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <span>必須</span>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <span>必須</span>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <span>必須</span>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
