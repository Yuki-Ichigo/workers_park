profile#show page

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: key) %>
<% end %>

<div>
	<% if current_user == @profile.user %>
		<%= link_to edit_profile_path do %>
			<button class="btn btn-warning">
				プロフィールを変更する
			</button>
		<% end %>
	<% end %>
</div>

<div>
	<%= attachment_image_tag @profile.user, :image, :fill, 200, 200, fallback: "no_image_human.jpg" %>
	<%= @profile.user.nic_name %>
</div>

<h3>紹介文</h3>
<div><%= @profile.introduction %></div>

<h3>このさきやってみたいこと</h3>
<div><%= @profile.future %></div>

<h3>就業形態</h3>
	<% if @profile.employment_type == "問わない" %>
		<span class = "active">社員</span>
		<span class = "active">副業・委託</span>
	<% elsif @profile.employment_type == "社員" %>
		<span class = "active">社員</span>
		<span class = "inactive">副業・委託</span>
	<% else @profilse.employment %>
		<span class = "inactive">社員</span>
		<span class = "active">副業・委託</span>
	<% end %>