<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: key) %>
<% end %>

ログイン済み全ユーザー表示
<% if user_signed_in? %>
	<div>
		<span class="label label-danger">マイカンパニー</span>
	</div>
	<div>
		<%= form_with(url: company_members_path, method: :delete) do |f| %>
				<%= f.submit "マイカンパニー登録を解除する", class: "btn btn-success btn-sm" %>
				<%= f.hidden_field :company_id, :value => @company.id %>
		<% end %>
	<% elsif current_user.company_members.any? %>
		<%= form_with(url: company_members_path, method: :post) do |f| %>
				<%= f.submit "他の会社でマイカンパニー登録しています", class: "btn btn-success btn-sm", disabled:"disabled" %>
				<%= f.hidden_field :company_id, :value => @company.id %>
		<% end %>
	<% else %>
		<%= form_with(url: company_members_path, method: :post) do |f| %>
				<%= f.submit "マイカンパニー登録をする", class: "btn btn-default btn-sm" %>
				<%= f.hidden_field :company_id, :value => @company.id %>
		<% end %>
	</div>
<% end %>


<!-- 会社基本情報 -->
<div>
	<%= link_to "ほかの会社を探す", companies_path, method: :get, class:"btn btn-success btn-sm" %>
</div>


<!-- インフォメーション（PR）部分 -->

<div><%= attachment_image_tag @company, :i_image1, :fill, 300, 300  %></div>
<div><%= attachment_image_tag @company, :i_image2, :fill, 300, 300 %></div>


<h3>企業紹介</h3>

<div><%= @company.introduction %></div>
<div><%= attachment_image_tag @company, :f_image1, :fill, 60, 60 %></div>
<div><%= attachment_image_tag @company, :f_image2, :fill, 60, 60 %></div>

<h3>今後の展望</h3>

<div><%= @company.future %></div>
<!-- インフォメーション（PR）部分 -->
<div>
	<% if user_signed_in? %>
		<% if current_user.permissions == "管理者" || current_user.permissions == "企業担当者" && current_user.company_members.find_by(company_id: @company.id) %>
			<div>
				<%= link_to information_company_path(@company.id) do %>
					<button class="btn btn-warning btn-sm">会社紹介ページを編集する</button>
				<% end %>
			</div>
			<div>
				<%= link_to talk_rooms_path(company_id: @company.id) do %>
					<button class="btn btn-warning btn-sm">トークルームを確認する</button>
				<% end %>
			</div>
			<div>
				<%= link_to new_company_work_path(@company.id), method: :get, class: "btn btn-warning btn-sm" do %>
				  シゴトの新規登録をする
				<% end %>
			</div>
		<% end %>
	<% end %>
</div>

<div>ログインしてない人でも誰でも見れる
	<%= link_to company_works_path(@company.id) do %>
		<button class="btn btn-success btn-sm">
			この会社の募集一覧をみる
		</button>
	<% end %>
</div>

<div>
	<table>
		<tr>
			<th></th>
			<td><%= attachment_image_tag @company, :image, :fill, 100, 100, fallback: "no_image_white.png", size:'100x100', class:"img-circle" %></td>
		</tr>
		<tr>
			<th>名前</th>
			<td><%= @company.name %></td>
		</tr>
		<tr>
			<th>フリガナ</th>
			<td><%= @company.name_kana %></td>
		</tr>
		<tr>
			<th>創立年月</th>
			<td><%= @company.establishment %></td>
		</tr>
		<tr>
			<th>url</th>
			<td><%= @company.url %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td>
				<%= "〒" + @company.zip_code %> <br />
				<%= @company.address_prefecture + @company.address_city + @company.address_line1 + @company.address_line2 %>
			</td>
		</tr>
		<% if user_signed_in? %>
			<% if current_user.permissions == "管理者" || current_user.permissions == "企業担当者" %>
				<tr>
					<th>電話</th>
					<td><%= @company.phone_number %></td>
				</tr>
				<tr>
					<th>メール</th>
					<td><%= @company.email %></td>		
				</tr>
			<% end %>
		<% end %>
	</table>
</div>
<!-- 会社基本情報 -->
<br />


<div>
	<% if user_signed_in? %>
		<div>
			<% if current_user.permissions == "管理者" || current_user.permissions == "企業担当者" %>
				<%= link_to edit_company_path do %>
					<button class="btn btn-warning btn-sm">会社の基本情報を変更する</button>
				<% end %>
			<% end %>
		</div>
		<div>
			<% if @company.is_active == 1 %>
				<td>
					<%= form_with model: @company, url: hide_company_path(@company), method: :put do |f| %>

							<%= f.hidden_field :is_active, value: false  %>
							<%= f.submit "停止する", class: "btn btn-primary  btn-sm" %>	
					<% end %>
				</td>
			<% else %>
				<td>
					<%= form_with model: @company, url: reopen_company_path(@company), method: :put do |f| %>

							<%= f.hidden_field :is_active, value: true  %>
							<%= f.submit "再開する", class: "btn btn-default  btn-sm" %>	
					<% end %>
				</td>
			<% end %>		
		</div>
	<% end %>
</div>