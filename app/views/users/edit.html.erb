<%= render "layouts/error", obj: @user %>

<h2>ユーザー基本情報編集</h2>

<%= form_for(@user, url: user_path) do |f| %>
	<table class="table row col-sm-12">
		<tr>
			<th></th>
			<td><%= attachment_image_tag @user, :image, :fill, 150, 150, fallback: "no_image_human.jpg" %><br>
			    <%= f.attachment_field :image %></td>
		</tr>
		<tr>
			<th class="col-sm-3">名前</th>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<th>フリガナ（全角カタカナ）</th>
			<td><%= f.text_field :name_kana %></td>
		</tr>
		<tr>
			<th>表示名</th>
			<td><%= f.text_field :nic_name %></td>
		</tr>
		<tr>
			<th>性別</th>
			<td>
				<%= f.radio_button :sex, :男性, { selected: @user.sex_before_type_cast } %>
    			<%= f.label :男性 %>
				<%= f.radio_button :sex, :女性, { selected: @user.sex_before_type_cast } %>
    			<%= f.label :女性 %>

  			</td>
		</tr>
		<tr>
			<th>誕生日</th>
			<td><%= f.text_field :birthday %></td>
		</tr>
		<tr>
			<th>メール</th>
			<td><%= f.email_field :email %></td>
		</tr>
		<tr>
			<th>郵便番号（ハイフンなし）</th>
			<td><%= f.text_field :zip_code %></td>
		</tr>
		<tr>
			<th>住所（都道府県）</th>
			<td><%= f.text_field :address_prefecture_name %></td>
		</tr>
		<tr>
			<th>住所（市区郡町村）</th>
			<td><%= f.text_field :address_city %></td>
		</tr>
		<tr>
			<th>住所（町名・番地）</th>
			<td><%= f.text_field :address_line1 %></td>
		</tr>
		<tr>
			<th>住所（建物名・号室）</th>
			<td><%= f.text_field :address_line2 %></td>
		</tr>
		<tr>
			<th>電話（ハイフンなし）</th>
			<td><%= f.text_field :phone_number %></td>
		</tr>
		<tr>
			<th class="col-sm-3"></th>
			<td class="col-sm-2"></td>
			<td><%= f.submit "編集内容を保存する",class:"btn btn-success" %></td>
		</tr>
	</table>
<br><br>
<% end %>