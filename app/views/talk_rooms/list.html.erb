talk_rooms # list page


<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: key) %>
<% end %>

<% @talk_rooms.each do |talk_room| %>
	<div>
		<table>
			<td><%= attachment_image_tag talk_room.company, :image, :fill, 60, 60, fallback: "no_image_human.jpeg", size:'60x60' %></td>
			<td><%= talk_room.company.name %></td>
			<td>
				<%= link_to "この会社とのトークルームに行く", talk_room_detail_path(talk_room.id),class: "btn btn-success  btn-sm" %>
			</td>
		</table>
	</div>
<% end %>