talk_room # show page

<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: key) %>
<% end %>

<% @talks.each do | talk | %>
  <% if talk.user_id == current_user.id %>
   <!-- write on rignt block ? クラウ名変更してCSS書く -->
    <div>
      <%= attachment_image_tag talk.user, :image, :fill, 40, 40, fallback: "no_image_human.jpeg", size:'40x40' %>
    </div>
    <div>
      <%= talk.user.name %> <br />
      <%= talk.body %>
    </div>
  <% else %>
  <!-- write on left block -->
    <div>
      <%= attachment_image_tag talk.user, :image, :fill, 40, 40, fallback: "no_image_human.jpeg", size:'40x40' %>
    </div>
    <div>
      <%= talk.user.name %> <br />
      <%= talk.body %>
    </div>
  <% end %>
<% end %>

<!-- メッセージ入力フォーム -->
<%= form_with url: talk_room_talks_path(@talk_room.id), local: true, method: :post do |f| %>
	<div><%= f.text_area :body %></div>
	<div><%= f.submit "送信する", class:"btn btn-success" %></div>
	<%= f.hidden_field :company_id, :value => @company_id %>
<% end %>